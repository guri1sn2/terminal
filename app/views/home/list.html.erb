<header>
  <p>最寄りバス停検索</p>
  <div class="logo">
    <img src="/assets/logo.png" alt="">
  </div>
</header>

<div>
  <a href="/" class="btn btn-info">検索画面へ戻る</a>
</div>
<!-- リストを表形式で全て表示 -->
<div class="table-out">
  <table class="table table-hover tbl">
    <thead class="blk">
      <tr>
        <th scope="col" width=80px>頭文字</th>
        <th scope="col">施設名</th>
        <th scope="col">かな</th>
        <th scope="col" width=100px>停留所名</th>
        <th scope="col" width=80px>のりば</th>
        <th scope="col">路線名</th>
        <th scope="col">備考</th>
        <th scope="col" width=100px>区分</th>
        <th scope="col" width=60px>変更</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.initial %></td>
          <td><%= post.place_name %></td>
          <td><%= post.hiragana %></td>
          <td><%= post.near_stop %></td>
          <td><%= post.number %></td>
          <td><%= post.root %></td>
          <td><%= post.memo %></td>
          <td><%= post.section %></td>
          <td>
            <%= link_to("変更", "/home/#{post.id}")%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>