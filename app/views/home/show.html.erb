<header>
  <p>最寄りバス停検索</p>
  <div class="logo">
    <img src="/assets/logo.png" alt="">
  </div>
</header>

<div class="back">

  <div class="main">
    <p>検索結果</p>
  </div>
  
  <div class="home">
    <a href="/" class="btn btn-info">一覧画面に戻る</a>
  </div>
</div>

<!-- 検索結果があった場合、表形式にて表示 -->
<% if @posts.present? %>
    <div class=gmap>
      <a href="https://www.google.com/maps" class="btn btn-info"><i class="fab fa-google"></i>　GoogleMapを開く</a>
    </div>
    <div class="table-out">
      <table class="table table-hover">
        <thead class="blk">
          <tr>
            <th scope="col" width=80px>頭文字</th>
            <th scope="col">施設名</th>
            <th scope="col">かな</th>
            <th scope="col" width=100px>停留所名</th>
            <th scope="col" width=80px>のりば</th>
            <th scope="col">路線名</th>
            <th scope="col">備考</th>
            <th scope="col" width=100px>区分</th>
            <th scope="col" width=60px>変更</th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.initial %></td>
              <td><%= post.place_name %></td>
              <td><%= post.hiragana %></td>
              <td><%= post.near_stop %></td>
              <td><%= post.number %></td>
              <td><%= post.root %></td>
              <td><%= post.memo %></td>
              <td><%= post.section %></td>
              <td>
                <%= link_to("変更", "/home/#{post.id}")%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
<% else %>
  <p class=error>条件に合う検索結果は見つかりませんでした</p>
<% end %>
</div>