  <body>
    <div class="components">
      <h2 class="components">マスタ変更</h2>
      <div class="content">
        <%= form_tag("/home/update/#{@post.id}") do %>
            施設名 <input type="text" class="forms" name="place_name" value=<%=@post.place_name%>><br>
            かな <input type="text" class="forms" name="hiragana" value=<%=@post.hiragana%>><br>
            停留所名 <input type="text" class="forms" name="near_stop" value=<%=@post.near_stop%>><br>
            頭文字 <input type="text" class="forms" name="initial" value=<%=@post.initial%>><br>
            のりば <input type="text" class="forms" name="number" value=<%=@post.number%>><br>
            路線名 <input type="text" class="forms" name="root" value=<%=@post.root%>><br>
            備考 <input type="text" class="forms" name="memo" value=<%=@post.memo%>><br>
            区分 <input type="text" class="forms" name="section" value=<%=@post.section%>><br>
          <input type="submit" class="update btn btn-info" value="更新">
          <a href="/" class="update btn btn-secondary">
            キャンセル
          </a>
        <% end %>
        <br>

        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#exampleModal">
          削除
        </button>
    </div>
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">マスタの削除</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                編集中のマスタを削除しますか？
              </div>
              <div class="modal-footer">
                <%= form_tag("/home/delete/#{@post.id}") do %>
                  <input type="submit" class="btn btn-primary" value="削除">
                <% end %>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">キャンセル</button>
              </div>
            </div>
          </div>
        </div>
    </div>
